#macro( table $node )
<table class="#alt( $node.table-class 'table table-condensed table-striped table-hover' )" ng-controller="${node.label}ListCtrl">
	<thead>
		<tr>
#foreach( $child in $node.children )
#@indent()
			#callMacro( $child 'header' )
#end
#end
#if( $node.actions )
			<th>Actions</th>
#end
		</tr>
	</thead>

	<tbody>
		<tr ng-repeat="${node.entity} in ${node.entity}List">
#foreach( $child in $node.children )
#@indent()
			#callMacro( $child $node.entity )
#end
#end
#if( $node.actions )
			<td>
#if( $node.actions.contains('edit') )
				<a role="button" class="btn btn-primary btn-xs" ng-href="#${node.entity}/{{${node.entity}.id}}">
					<span class="glyphicon glyphicon-edit"></span>
				</a>
#end
#if( $node.actions.contains('remove') )
				<button type="button" class="btn btn-danger btn-xs" ng-click="remove(${node.entity})">
					<span class="glyphicon glyphicon-remove"></span>
				</button>
#end
			</td>
#end
		</tr>
	</tbody>
</table>
#end