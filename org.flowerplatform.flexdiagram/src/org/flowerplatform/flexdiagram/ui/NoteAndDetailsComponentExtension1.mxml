<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" depth="{int.MAX_VALUE}">
	
		<fx:Script>
		<![CDATA[
			[Embed(source="../icons/knotes.png")]
			public static const mindmap_knotesIcon:Class;		
		]]>
	</fx:Script>
	
	<s:Rect width="100%" height="100%" >
		<s:stroke>
			<s:SolidColorStroke color="gray" />
		</s:stroke>
		<s:fill>
			<s:SolidColor color="white" alpha="0.95"/>
		</s:fill>
	</s:Rect>
	<s:Group>
		<s:layout>
			<s:VerticalLayout/>
		</s:layout>
		<s:RichText id="nodeDetails"  paddingLeft="1" paddingRight="2" paddingTop="5" paddingBottom="5"/>
		<s:Image id="noteIcon" source="{mindmap_knotesIcon}"/>
		<s:RichText id="noteText" paddingLeft="1" paddingRight="2" paddingTop="0" paddingBottom="5"/>
	</s:Group>
</s:Group>