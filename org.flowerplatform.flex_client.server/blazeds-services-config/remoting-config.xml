<?xml version="1.0" encoding="UTF-8"?>
<service id="remoting-service" class="flex.messaging.services.RemotingService">

    <adapters>
        <adapter-definition id="java-object" class="flex.messaging.services.remoting.adapters.JavaAdapter" default="true"/>
    </adapters>
   
   	<default-channels>
        <channel ref="remoting-amf"/>
	</default-channels>
   
     <destination id="nodeService">
        <properties>
            <source>org.flowerplatform.core.node.remote.NodeService</source>
        </properties>
    </destination>
    
    <destination id="updateService">
        <properties>
            <source>org.flowerplatform.core.node.update.remote.UpdateService</source>
        </properties>
    </destination>
    
    <destination id="codeSyncOperationsService">
        <properties>
            <source>org.flowerplatform.codesync.remote.CodeSyncOperationsService</source>
        </properties>
    </destination>
    
    <destination id="freeplaneService">
        <properties>
            <source>org.flowerplatform.freeplane.remote.FreeplaneService</source>
        </properties>
    </destination>
    
</service>
