<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				xmlns:ns="org.flowerplatform.flexutil.view_content_host.*"
				width="500"
				height="600"
				implements="org.flowerplatform.flexutil.view_content_host.IViewContent">
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			import org.flowerplatform.flex_client.resources.Resources;
			import org.flowerplatform.flexutil.view_content_host.IViewHost;
			
			
			[Bindable]
			public var repo:String;
			public var unstagedData:ArrayCollection = new ArrayCollection();
			protected var _viewHost:IViewHost;
			
			public function additionalCloseHandler():void {
				// TODO Auto Generated method stub
				
			}
			public function get viewHost():IViewHost {
				return _viewHost;
			}
			
			public function set viewHost(value:IViewHost):void {
				_viewHost = value;
			}
		]]>
	</fx:Script>
	
	<s:HGroup width="100%"
			  height="100%"
			  paddingTop="10">
		<s:VGroup width="50%"
				  height="100%">	
			<s:Label text="Staged Changes"
					 width="100%"
					 height="5%">	
			</s:Label>
			<s:List id="stagedChanges"
					width="100%"
					height="45%">
			</s:List>
			
			<s:Label text="Unstaged Changes"
					 width="100%"
					 height="5%"
					 paddingTop="5">	
			</s:Label>
			<s:List id="unstagedChanges"
					width="100%"
					height="45%"
					dataProvider="{unstagedData}">
			</s:List>
		</s:VGroup>
		<s:VGroup width="50%"
				  height="100%">
			<s:HGroup width="100%"
					  height="5%">
				<s:Label text="Commit Message"
						 width="90%"
						 height="100%"
						 fontSize="10">
				</s:Label>
				
				<mx:Button id="amendButton"
						   toolTip="Amend Previous Commit"
						   icon="{Resources.amendIcon}"
						   width="16"
						   height="16">
				</mx:Button>
			</s:HGroup>
			
			<s:HGroup width="100%" 
					  height="65%"
					  verticalAlign="middle">
				<s:TextArea id="commitMessage"
							width="100%" 
							height="100%"
							fontStyle="italic"/>
			</s:HGroup>
			<s:HGroup width="100%" 
					  height="25%"
					  paddingTop="15">
				<s:VGroup width="30%" 
						  height="100%" >
					<s:Label text="Author"
							 width="100%" 
							 height="30%"
							 verticalAlign="middle">
					</s:Label>
					
					<s:Label text="Commiter"
							 width="100%" 
							 height="30%"
							 verticalAlign="middle">	
					</s:Label>
				</s:VGroup>  
				
				<s:VGroup width="70%" 
						  height="100%" >
					<s:TextInput width="100%" 
								 height="30%">	
					</s:TextInput>
					
					<s:TextInput width="100%" 
								 height="30%">
					</s:TextInput>
				</s:VGroup>  
			</s:HGroup> 
			<s:HGroup horizontalAlign="center"
					  verticalAlign="middle"
					  width="100%" 
					  height="5%">
				<mx:Button id="commitAndPush"
						   label="Commit and Push">
				</mx:Button>
			</s:HGroup>
		</s:VGroup>
	</s:HGroup>
</s:VGroup>
