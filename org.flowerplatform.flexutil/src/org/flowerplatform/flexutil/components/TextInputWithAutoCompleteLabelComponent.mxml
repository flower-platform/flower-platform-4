<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  width="100%" verticalAlign="middle" gap="5"
		  creationComplete="creationCompleteHandler(event)">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			import mx.utils.StringUtil;
			
			import spark.events.TextOperationEvent;
			
			import org.flowerplatform.flexutil.FlexUtilAssets;
			import org.flowerplatform.flexutil.Utils;
			
			[Bindable]
			public var labelText:String;
			
			[Bindable]
			public var inputText:String;
			
			[Bindable]
			public var autoCompletelabelFormat:String;
			
			public function getTextInput():String {
				return filename.text;
			}
			
			protected function creationCompleteHandler(event:FlexEvent):void {
				filename.text = FlexUtilAssets.INSTANCE.getMessage('label.untitled');
				
				Utils.makePseudoDisabled(result);
				filenameChangeHandler();
			}
			
			protected function filenameChangeHandler(event:TextOperationEvent = null):void {			
				result.text = "";
				result.appendText(StringUtil.substitute(autoCompletelabelFormat, [filename.text]));				
			}
			
		]]>
	</fx:Script>
	
	<s:Label text="{labelText}"/>
	<s:TextInput id="filename" text="{inputText}" width="50%" change="filenameChangeHandler(event)"/>
	<s:TextInput id="result" fontWeight="bold" width="50%"/>

</s:HGroup>