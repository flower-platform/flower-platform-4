<ns:BasicViewContent xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"		
		 xmlns:ns="org.flowerplatform.flexutil.view_content_host.*" >
			
	<s:List id="list" width="100%" height="100%" dataProvider="{listProvider}" labelFunction="{labelFunction}" click="okHandler(event)" />
	
	<fx:Script>
		<![CDATA[
			import mx.collections.IList;
			import mx.events.FlexEvent;
			
			public var title:String;
			
			[Bindable]
			public var listProvider:IList;
				
			[Bindable]
			public var labelFunction:Function;
			
			public var resultHandler:Function;
			
			override protected function okHandler(event:Event=null):void {				
				super.okHandler(event);
				resultHandler(list.selectedItem);
				cancelHandler();
			}
						
			override protected function creationCompleteHandler(event:FlexEvent):void {
				list.selectedIndex = 0;			
			}
			
		]]>
	</fx:Script>
	
</ns:BasicViewContent>
