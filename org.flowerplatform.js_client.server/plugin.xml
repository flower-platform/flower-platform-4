<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.equinox.http.registry.servlets">
      <servlet
            alias="/ws-dispatcher"
            class="org.flowerplatform.js_client.server.WebServicesDispatcherServlet">
         <init-param
               name="javax.ws.rs.Application"
               value="org.flowerplatform.js_client.server.WebServicesConfig">
         </init-param>
      </servlet>
      <servlet
            alias="/oauth/redirect"
            class="org.flowerplatform.js_client.server.oauth.client.OAuth2RedirectServlet">
      </servlet>
      <servlet
            alias="/oauth/login"
            class="org.flowerplatform.js_client.server.oauth.client.OAuth2LoginServlet">
      </servlet>
      <servlet
            alias="/oauth/authorize"
            class="org.flowerplatform.js_client.server.oauth.server.OAuth2AuthorizationServlet">
      </servlet>
      <servlet
            alias="/oauth/token"
            class="org.flowerplatform.js_client.server.oauth.server.OAuth2TokenServlet">
      </servlet>
   </extension>
</plugin>
